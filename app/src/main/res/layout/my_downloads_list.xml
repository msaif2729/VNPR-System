<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_10sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        app:cardCornerRadius="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/offwhite">
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/offwhite"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:background="@color/offwhite">
                    <ImageView
                        android:id="@+id/vehicle_img"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@mipmap/burgman_round"
                        />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/regis_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MH01BX3726"
                        android:textSize="@dimen/_18sdp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mohammed Saif Ansari Mohammed Sajid"
                        android:fontFamily="@font/ubuntumedium"
                        />
                    <TextView
                        android:id="@+id/owner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Owner"
                        android:fontFamily="@font/ubuntumedium"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:background="@color/offwhite"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/_4sdp"
                >
                <Button
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:text="View"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:layout_margin="@dimen/_2sdp"
                    android:textColor="@color/colorPrimary"
                    />
                <Button
                    android:id="@+id/remove"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Remove"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:layout_margin="@dimen/_2sdp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>